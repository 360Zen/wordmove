local:
  vhost: "http://vhost.local"
  wordpress_path: "~/dev/sites/your_site"
  database:
    name: "database_name"
    username: "username"
    password: "password"
    host: "host"
remote:
  vhost: "http://remote.com"
  wordpress_path: "/var/www/your_site"
  exclude:
    - .git
    - .DS_Store
    - .sass-cache
    - Movefile
  database:
    name: "database_name"
    username: "username"
    password: "password"
    host: "host"
  ssh:
    host: "host"
    username: "username"
    password: "password" # password is optional, will use public keys if available.
    # port: 22 # Port is optional
    #
    # gateway:
    #   host: "host"
    #   username: "username"
    #   password: "password" # password is optional, will use public keys if available.

